/**
 * 列表
 */
.list-cells{
  margin-top: 15px;
  background: #fff;
}
.list-content{
  padding: 0 30rpx;
}
.list-content:hover{
  background: #f0f0f0;
}
.list-cell{
  color: #666;
  font-size: 34rpx;
  padding: 20rpx 0;
  border-top: 2rpx solid #e0e0e0;
}
.list-cell::after{
  display: table;
  clear: both;
}
.list-cell-noborder{
  border-top-width: 0;
}
.list-cell-icon{
  width: 38rpx;
  height: 38rpx;
  float: right;
  margin-top: 5rpx;
}
.list-cell-lefticon{
  width: 38rpx;
  height: 38rpx;
  vertical-align: middle;
  margin-right: 15rpx;
}

.list-icon-remove{
  height: 40rpx;
  width: 40rpx;
  float: right;
}

/**
 * 表单
 */
.list-title{
  color: #999;
  font-size: 32rpx;
  padding: 30rpx 0rpx 0 30rpx;
}

.list-form-title{
  float: left;
  margin-right: 20rpx;
}
.list-form-input{
  line-height: 50rpx;
}
.placeholder{
  font-family: "microsoft yahei";
  color: #aaa;
}

.input{
  font-family: "microsoft yahei";
  color: #576b95;
}

.list-add-btn{
    position: fixed;
    bottom: 38rpx;
    left: 38rpx;
    right: 38rpx;
    height: 100rpx;
    text-align: center;
    background: #09bb07;
    font-size: 36rpx;
    line-height: 100rpx;
    color: #fff;
    border-radius: 8rpx;
}